@page "/report"
@model demo_mescius_report.Pages.PlantReportModel
@{
    ViewData["Title"] = "Tra cứu cây trồng";
}
<h2>Danh sách cây trồng (demo)</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Danh mục</th>
            <th>Tên khoa học</th>
            <th>Mô tả</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plant in Model.Plants)
        {
            <tr>
                <td>@plant.Name</td>
                <td>@plant.Category</td>
                <td>@plant.ScientificName</td>
                <td>@plant.Description</td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-page-handler="ExportPdf">
    <button type="submit" class="btn btn-success">Xuất PDF</button>
</form>
